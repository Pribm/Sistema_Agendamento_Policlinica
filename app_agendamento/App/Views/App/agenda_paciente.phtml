        function limpaCampos() {
            $('#Paciente').val('');
            $('#sus').val('');
            $('#prontuario').val('');
            $('#id').val('');
        }

        function showAlert(message, className){
            let alert = `<div class='d-flex justify-content-center position-fixed fixed-top mt-5'>`
