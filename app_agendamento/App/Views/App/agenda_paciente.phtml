        function modalPacientes(list){
            let table = `<table class='table-hover'>`
                        table+= `<thead>`
                        table+= `<tr>`
                        table+= `<th>Nome</th>`
                        table+= `<th>Prontuario</th>`
                        table+= `<th>Sus</th>`
                        table+= `</tr>`
